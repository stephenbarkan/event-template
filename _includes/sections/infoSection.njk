{% macro metadata(props={}) %}
    <dl class="flex flex-col gap-2 not-last:border-b not-last:pb-8">
        <dt class="text-lg">{{ props.term }}</dt>
        <dd>{{ props.details }}</dd>
    </dl>
{% endmacro %}


