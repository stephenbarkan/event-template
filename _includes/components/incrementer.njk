{% set newProps = {"name": props.name} %}

{# ------------------------------------------------------------------------------------------------------------------------------------- #}
<div x-data="{
    attendees: 0
}"
@input-attendees.window="attendees = $event.detail"
>
<div
    x-data="{value:'{% if fieldAttrs.value %}{{fieldAttrs.value}}{% endif %}'}"
