---
layout: base
eleventyExcludeFromCollections: true
---


{% from "components/button.njk" import button %}
{% from "components/container.njk" import container %}
{% from "components/copyToClipboard.njk" import copyToClipboard %}

<main class="flex flex-col items-center gap-half-section py-fluid-inline md:py-half-section grow w-full">
    {% call container({size:"narrow"}, {class:"text-pretty justify-items-center text-center gap-8"}) %}
            <h1 class="text-xl">
                Thanks!
            </h1>
            <p class="text-base">We can't wait to see you there! Please consider sharing the event with your friends.</p>
            <div class="flex max-sm:flex-col gap-4 w-full sm:items-center justify-center">
                {% call copyToClipboard(
                    props={
                        input: global.siteDomain,
                        toastMessage: "RSVP link copied to clipboard!"
                    },
                    attrs={}
                ) %}
                    {{ button({label:"Share RSVP link", type:"button", variant:"ink", size:"base"},{@click:"copy", class:"w-full"}) }}
                {% endcall %}
                {{ button({label:"Return home", type:"button", variant:"hue", size:"base"},{href:"/", class:""}) }}
            </div>
    {% endcall %}
    {% call container({size:"narrow"},{class:"place-content-center"}) %}
        <div class="border max-md:row-1 md:sticky top-half-section max-w-150 overflow-hidden"><img class="w-full object-cover object-top" src="{{ eventDetails.graphic }}" alt=""></div>
    {% endcall %}
</main>
